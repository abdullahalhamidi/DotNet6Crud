@model IEnumerable<DotNet6Crud.Models.Item>
<DotNet6Crud.Models.Item>
<div class="container px-4">
    <a method="post" asp-controller="Item" asp-action="Create" type="button" class="btn btn-primary" style="margin-bottom: 20px; margin-right: 5px;">Borrow Item</a>
    <a class="btn btn-dark" style="margin-bottom: 20px; margin-right: 5px">Edit Information</a>
    <a class="btn btn-danger" style="margin-bottom: 20px; margin-right: 5px;">Delete Item</a>
   <div class="row row-cols-2 row-cols-lg-5 g-2 g-lg-3">
      @if(Model.Count() > 0)
      {
      @foreach(var item in Model)
      {
      <div class="col-3">
         <div class="card text-bg-primary">
            <div class="card-header">@item.BorrowedItem</div>
            <div class="card-body">
               <h5 class="card-title">@item.Borrower</h5>
               <p class="card-text">Days Borrowed: @item.DaysBorrowed</p>
               <p class="card-text">Borrowed Date: @item.BorrowedDate</p>
               <p class="card-text">Return Date: @item.ItemReturnDate</p>
            </div>
         </div>
      </div>
      }
      }
      else
      {
      <p>No items created yet</p>
      }
   </div>
</div>